<body id="Govde" style="background-color :#c6e9dc ; padding-top:200px;">



    <div class="form-control" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif  ; font-size:larger; border : solid 3px cadetblue ; border-radius:8px; height:max-content  ">
        <h3 class="col-lg-10" style="padding-left:500px ; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color:black;"> Kayıt Ol</h3>

        <br />
        <br />
        <br />
        @*<div class="active" style="font-size: larger;   font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: cadetblue;">*@
        <form action="/" method="post">

            <table>

                <tr>
                    <td>
                        <div>
                            <label class="form-label">Ad</label>
                            <input type="text" class="form-control" id="TxtAd" placeholder="Ad ">  <br />
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>
                        <div>
                            <label class="form-label">Soyad</label>
                            <input type="text" class="form-control" id="TxtSoyad" placeholder="Soyad ">  <br />
                        </div>
                    </td>
                </tr>





                <tr>
                    <td>
                        <div>
                            <label for="username" class="form-label">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="TxtUsername" placeholder="Kullanıcı adı ">  <br />
                        </div>
                    </td>
                </tr>





                <tr>
                    <td>
                        <div>

                            <label class="form-label" for="password-input">Şifre</label><br />
                            <div>
                                <input type="password" class="form-control" placeholder="Şifre" id="TxtPassword">
                            </div>
                            <div>
                                <a href="#">Şifremi Unuttum?</a>
                            </div><br />
                        </div>
                    </td>
                </tr>


                <tr>
                    <td>
                        <div>
                            <label class="form-label">Adres</label>
                            <input type="text" class="form-control" id="TxtAdres" placeholder="Adres ">  <br />
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>
                        <div>
                            <label class="form-label">E-Mail</label>
                            <input type="email" class="form-control" id="TxtEMail" placeholder="Mail Adresi ">  <br />
                        </div>
                    </td>
                </tr>



                <tr>
                    <td>
                        <div>
                            <button class="btn btn-success w-100" type="button" onclick="Register();" id="BtnRegister">Kaydol</button>
                        </div><br />
                    </td>

                </tr>


            </table>

        </form>


        @*</div>*@


    </div>



    </div>
    <label style="display:none; color:black; padding-left:100px" id="AlrtUyari"> Kullanıcı bilgileri hatalı </label>



    <script>
        function openNav() {
            document.getElementById("YanMenu").style.width = "250px";
            document.getElementById("main").style.marginLeft = "50px";
            document.getElementById("Ac").style.display = "none";
            document.getElementById("Kapa").style.display = "none";


        }

        function closeNav() {
            document.getElementById("YanMenu").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.getElementById("Kapa").style.display = "none";
            document.getElementById("Ac").style.display = "block";
        }

        function closeNavInside() {
            document.getElementById("YanMenu").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.getElementById("Kapa").style.display = "none";
            document.getElementById("Ac").style.display = "block";
        }


        function Register() {
            var KullaniciAdi = document.getElementById("TxtUsername").value;
            var Sifre = document.getElementById("TxtPassword").value;
            var Ad = document.getElementById("TxtAd").value;
            var Soyad = document.getElementById("TxtSoyad").value;
            var Adres = document.getElementById("TxtAdres").value;
            var EMail = document.getElementById("TxtEMail").value;
            var AlertUyari = document.getElementById("AlrtUyari");


            if (KullaniciAdi == "" || Sifre == "" || Ad == "" || Soyad == "" || Adres == "" || EMail == ""  ) {
                alert("Kullanıcı veya şifre  boş olamaz");
                AlertUyari.style.display = "block";
                document.getElementById("TxtUsername").className = "TextBoxWrong";
                document.getElementById("TxtPassword").className = "TextBoxWrong";
                document.getElementById("TxtAd").className = "TextBoxWrong";
                document.getElementById("TxtSoyad").className = "TextBoxWrong";
                document.getElementById("TxtAdres").className = "TextBoxWrong";
                document.getElementById("TxtEMail").className = "TextBoxWrong";
                
            };


        }





    </script>


</body>



