<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/Style/Css/CssMain")
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <h2 style="text-align:center">SOFTİTO AKADEMİ</h2>


    </div>

    <div id="YanMenu" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">

            &times;
        </a>
        <span id="Diger" style="font-size:30px;cursor:pointer ; padding-left:210px;" onclick="closeNavInside()">

            &#9776;
        </span>
        <a href="~/Home/Index">Anasayfa</a>
        <a href="~/Home/Login">Giriş Yap</a>
        <a href="~/Home/register">Kaydol</a>
        <a href="https://softito.com.tr/egitimler">Eğitimler</a>
        <a href="~/Home/Contact">İletişim</a>
        <a href="~/Home/About">Biz Kimiz</a>
    </div>

    <div id="main">


        <span id="Ac" style="font-size:30px;cursor:pointer ; color:black; padding-left:100px" onclick="openNav()">

            &#9776; Menüyü Aç
        </span>
        <span id="Kapa" style="font-size:30px;cursor:pointer ; display:none;   " onclick="closeNav()">

            &#9776; open
        </span>




        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p style="padding-left:1000px; padding-top:120px; "> &copy;  @DateTime.Now - SoftItoKurs</p>

            </footer>

        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/Js/MainJs")

        @RenderSection("scripts", required: false)
</body>
</html>
